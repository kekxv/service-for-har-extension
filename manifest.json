{
  "manifest_version": 3,
  "name": "HAR Replay DevTool",
  "description": "Intercepts and replays network requests based on loaded HAR files.",
  "version": "1.0",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "debugger",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "devtools_page": "devtools.html"
}
