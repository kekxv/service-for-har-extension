{
  "manifest_version": 3,
  "name": "HAR Replay (Global)",
  "description": "Globally intercepts and replays network requests for all tabs based on loaded HAR files.",
  "version": "2.2",
  "icons": {
    "16": "icon_off.png",
    "48": "icon_off.png",
    "128": "icon_off.png"
  },
  "permissions": [
    "debugger",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon_off.png",
      "48": "icon_off.png",
      "128": "icon_off.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [ "loading.html" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
